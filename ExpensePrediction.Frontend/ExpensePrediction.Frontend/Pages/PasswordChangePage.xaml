<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensePrediction.Frontend.Pages.PasswordChangePage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Old password"
                   IsPassword="True"
                   x:Name="OldPass"/>
            <Entry Placeholder="New password"
                   IsPassword="True"
                   x:Name="NewPass"/>
            <Entry Placeholder="Repeat new password"
                   IsPassword="True"
                   x:Name="NewPassRepeated"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Text="Back"
                        Grid.Column="0"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Clicked="BackClicked" />
                <Button Text="Submit"
                        Grid.Column="1"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Clicked="SubmitClicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>